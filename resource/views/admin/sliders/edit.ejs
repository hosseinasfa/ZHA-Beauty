<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش اسلایدر</h2>
</div>
<form class="form-horizontal" action="/admin/sliders/<%= slider._id %>?_method=put" method="post" enctype="multipart/form-data">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="title" class="control-label font-weight-bold">عنوان اسلایدر</label>
            <input type="text" class="form-control" name="title" id="title" placeholder="عنوان را وارد کنید" value="<%= slider.title %>">
        </div>
    </div>



    <div class="form-group row">

        <div class="col">
            <label for="images" class="control-label font-weight-bold">تصویر اسلایدر</label>
            <input type="file" class="form-control" name="images" id="images" placeholder="تصویر مقاله را وارد کنید" >
        </div>
    </div>
    <div class="form-group row">
        <% Object.entries(slider.images).forEach(([size , image]) => { %>
            <div class="col-sm-2">
                <label class="control-label">
                    <%= size %>
                    <input type="radio" name="imagesThumb" value="<%= image %>" checked="">
                    <a href="<%= image %>" target="_blank"><img src="<%= image %>" width="100%"></a>
                </label>
            </div>
        <% }) %>
    </div>
  
    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ویرایش</button>
        </div>
    </div>
</form>

<link rel="stylesheet" href="/css/component-chosen.min.css">
<script src="/ckeditor/ckeditor.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script>
    CKEDITOR.replace('body' , {
        filebrowserUploadUrl : '/admin/upload-image'
    })

   $('.form-control-chosen').chosen({});
</script>